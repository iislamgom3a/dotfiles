
gpp() {
    if [ -z "$1" ]; then
        echo "‚ùå Usage: gpp23 <file.cpp> [program args]"
        return 1
    fi

    src="$1"
    shift
    if [ ! -f "$src" ]; then
        echo "‚ùå File '$src' not found!"
        return 1
    fi

    exe="${src%.*}"   # Remove .cpp extension

    echo "üîß Compiling $src ‚Üí $exe"
    g++ -static -DLOCAL -lm -s -x c++ -Wall -Wextra -O2 -std=c++23 "$src" -o "$exe"

    if [ $? -eq 0 ]; then
        echo "üöÄ Running ./$exe"
        "./$exe" "$@"
    else
        echo "‚ùå Compilation failed."
    fi
}


